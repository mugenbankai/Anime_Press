{% extends 'base.html.twig' %}

{% block title %}Accueil - AnimePress
{% endblock %}

{% block body %}
	<!-- Hero Section -->
	<div class="hero-section text-center">
		<div class="container">
			<h1>
				<i class="fas fa-newspaper"></i>
				AnimePress</h1>
			<p class="lead">Découvrez nos derniers articles et actualités</p>
		</div>
	</div>

	<!-- Articles Grid -->
	<div class="container">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h2>
				<i class="fas fa-fire"></i>
				Derniers Articles</h2>
			<a href="{{ path('article_index') }}" class="btn btn-outline-primary">
				Voir tous les articles
				<i class="fas fa-arrow-right"></i>
			</a>
		</div>

		{% if articles is empty %}
			<div class="alert alert-info" role="alert">
				<i class="fas fa-info-circle"></i>
				Aucun article disponible pour le moment.
			</div>
		{% else %}
			<div class="row g-4">
				{% for article in articles %}
					<div class="col-md-6 col-lg-4">
						{% include 'components/_article_card.html.twig' %}
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
{% endblock %}
