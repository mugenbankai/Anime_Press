{% extends 'base.html.twig' %}

{% block title %}Administration des articles
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h1>
				<i class="fas fa-shield-alt text-danger"></i>
				Administration des articles
			</h1>
			<a href="{{ path('app_home') }}" class="btn btn-secondary">
				<i class="fas fa-arrow-left"></i>
				Retour
			</a>
		</div>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
			</div>
		{% endfor %}

		<div class="card shadow-sm">
			<div class="card-body">
				<p class="text-muted mb-4">
					<i class="fas fa-info-circle"></i>
					Total de
					{{ articles|length }}
					article(s)
				</p>

				{% if articles is empty %}
					<div class="alert alert-info">
						<i class="fas fa-inbox"></i>
						Aucun article publié.
					</div>
				{% else %}
					<div class="table-responsive">
						<table class="table table-hover align-middle">
							<thead class="table-dark">
								<tr>
									<th>ID</th>
									<th>Titre</th>
									<th>Auteur</th>
									<th>Catégorie</th>
									<th>Date</th>
									<th width="200">Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for article in articles %}
									<tr>
										<td class="text-muted">#{{ article.id }}</td>
										<td>
											<strong>{{ article.title }}</strong>
										</td>
										<td>
											<i class="fas fa-user"></i>
											{{ article.author.firstName }}
											{{ article.author.lastName }}
										</td>
										<td>
											<span class="badge bg-primary">
												{{ article.category.name }}
											</span>
										</td>
										<td class="text-muted">
											{{ article.createdAt|date('d/m/Y') }}
										</td>
										<td>
											<div class="btn-group" role="group">
												<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
													<i class="fas fa-eye"></i>
												</a>
												<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
													<i class="fas fa-edit"></i>
												</a>
												<form method="post" action="{{ path('app_admin_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Supprimer cet article ?');" style="display: inline;">
													<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
													<button type="submit" class="btn btn-sm btn-outline-danger" title="Supprimer">
														<i class="fas fa-trash"></i>
													</button>
												</form>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}
