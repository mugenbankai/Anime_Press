{% extends 'base.html.twig' %}

{% block title %}Inscription - Symfony Press{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- En-tête -->
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-4x text-success mb-3"></i>
                        <h1 class="h3 mb-2">Inscription</h1>
                        <p class="text-muted">Créez votre compte Symfony Press</p>
                    </div>

                    <!-- Erreurs globales -->
                    {{ form_errors(registrationForm) }}

                    <!-- Formulaire -->
                    {{ form_start(registrationForm) }}

                        <div class="mb-3">
                            <label for="{{ registrationForm.email.vars.id }}" class="form-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'votre@email.com'
                                }
                            }) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="mb-3">
                            <label for="{{ registrationForm.firstName.vars.id }}" class="form-label">
                                <i class="fas fa-user"></i> Prénom
                            </label>
                            {{ form_widget(registrationForm.firstName, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Jean'
                                }
                            }) }}
                            {{ form_errors(registrationForm.firstName) }}
                        </div>

                        <div class="mb-3">
                            <label for="{{ registrationForm.lastName.vars.id }}" class="form-label">
                                <i class="fas fa-user"></i> Nom
                            </label>
                            {{ form_widget(registrationForm.lastName, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Dupont'
                                }
                            }) }}
                            {{ form_errors(registrationForm.lastName) }}
                        </div>

                        <div class="mb-3">
                            <label for="{{ registrationForm.plainPassword.vars.id }}" class="form-label">
                                <i class="fas fa-lock"></i> Mot de passe
                            </label>
                            {{ form_widget(registrationForm.plainPassword, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle"></i> Minimum 6 caractères
                            </small>
                        </div>

                        <div class="form-check mb-4">
                            {{ form_widget(registrationForm.agreeTerms, {
                                'attr': {
                                    'class': 'form-check-input'
                                }
                            }) }}
                            <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                                J'accepte les conditions d'utilisation
                            </label>
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                            <i class="fas fa-user-plus"></i> S'inscrire
                        </button>

                    {{ form_end(registrationForm) }}

                    <!-- Lien connexion -->
                    <div class="text-center mt-4">
                        <p class="text-muted mb-0">
                            Déjà un compte ?
                            <a href="{{ path('app_login') }}" class="text-decoration-none">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Retour accueil -->
            <div class="text-center mt-3">
                <a href="{{ path('app_home') }}" class="text-muted text-decoration-none">
                    <i class="fas fa-arrow-left"></i> Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
