{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie - AnimePress
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center mt-4">
			<div class="col-lg-6">
				<div class="card shadow-sm border-0">
					<div
						class="card-body p-4">
						<!-- En-tête -->
						<div class="d-flex align-items-center mb-4">
							<i class="fas fa-folder-plus fa-3x text-success me-3"></i>
							<div>
								<h1 class="h3 mb-0">Nouvelle catégorie</h1>
								<p class="text-muted mb-0">Créer une nouvelle catégorie d'articles</p>
							</div>
						</div>

						<!-- Formulaire -->
						{{ include('category/_form.html.twig') }}

						<!-- Bouton retour -->
						<div class="mt-3">
							<a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
								<i class="fas fa-arrow-left"></i>
								Retour à la liste
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
