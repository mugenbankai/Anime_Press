{% extends 'base.html.twig' %}

{% block title %}Accès refusé - AnimePress
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="row justify-content-center">
			<div class="col-md-8 text-center">
				<div class="error-page">
					<h1 class="display-1 fw-bold text-danger">403</h1>
					<div class="mb-4">
						<i class="fas fa-ban fa-5x text-danger"></i>
					</div>
					<h2 class="mb-3">Accès refusé</h2>
					<p class="lead text-muted mb-4">
						Vous n'avez pas l'autorisation d'accéder à cette page.
					</p>
					<p class="mb-4">
						Cette zone est protégée. Si vous pensez qu'il s'agit d'une erreur, contactez un administrateur.
					</p>
					<div class="d-flex gap-2 justify-content-center">
						<a href="{{ path('app_home') }}" class="btn btn-primary">
							<i class="fas fa-home"></i>
							Retour à l'accueil
						</a>
						{% if not app.user %}
							<a href="{{ path('app_login') }}" class="btn btn-outline-primary">
								<i class="fas fa-sign-in-alt"></i>
								Se connecter
							</a>
						{% endif %}
					</div>

					{% if show_details is defined and show_details and exception is defined %}
						<div class="mt-5 text-start">
							<div class="alert alert-warning">
								<h5>
									<i class="fas fa-info-circle"></i>
									Détails de l'erreur (mode développement)</h5>
								<hr>
								<p>
									<strong>Message :</strong>
									{{ exception.message }}</p>
								<p>
									<strong>Fichier :</strong>
									{{ exception.file }}
									(ligne
									{{ exception.line }})</p>
								<p>
									<strong>Code :</strong>
									{{ exception.code }}</p>
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<style>
			.error-page {
				padding: 3rem 0;
			}
			.error-page h1 {
				font-size: 8rem;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
			}
		</style>
	{% endblock %}
