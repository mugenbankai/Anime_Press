{% extends 'base.html.twig' %}

{% block title %}Page non trouvée - AnimePress
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="row justify-content-center">
			<div class="col-md-8 text-center">
				<div class="error-page">
					<h1 class="display-1 fw-bold text-primary">404</h1>
					<div class="mb-4">
						<i class="fas fa-ghost fa-5x text-muted"></i>
					</div>
					<h2 class="mb-3">Page non trouvée</h2>
					<p class="lead text-muted mb-4">
						Oups ! Cette page semble avoir disparu dans une dimension parallèle...
					</p>
					<p class="mb-4">
						La page que vous recherchez n'existe pas ou a été déplacée.
					</p>
					<div class="d-flex gap-2 justify-content-center">
						<a href="{{ path('app_home') }}" class="btn btn-primary">
							<i class="fas fa-home"></i>
							Retour à l'accueil
						</a>
						<a href="{{ path('article_index') }}" class="btn btn-outline-primary">
							<i class="fas fa-file-alt"></i>
							Voir les articles
						</a>
					</div>

					{% if show_details is defined and show_details and exception is defined %}
						<div class="mt-5 text-start">
							<div class="alert alert-info">
								<h5>
									<i class="fas fa-info-circle"></i>
									Détails de l'erreur (mode développement)</h5>
								<hr>
								<p>
									<strong>Message :</strong>
									{{ exception.message }}</p>
								<p>
									<strong>URL demandée :</strong>
									{{ app.request.uri }}</p>
								<p>
									<strong>Fichier :</strong>
									{{ exception.file }}
									(ligne
									{{ exception.line }})</p>
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>

		<style>
			.error-page {
				padding: 3rem 0;
			}
			.error-page h1 {
				font-size: 8rem;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
			}
		</style>
	{% endblock %}
