{% extends 'base.html.twig' %}

{% block title %}Nouvel Article - AnimePress
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center mt-4">
			<div class="col-lg-8">
				<div class="card shadow-sm border-0">
					<div
						class="card-body p-4">
						<!-- En-tête -->
						<div class="d-flex align-items-center mb-4">
							<i class="fas fa-pen fa-3x text-success me-3"></i>
							<div>
								<h1 class="h3 mb-0">Créer un nouvel article</h1>
								<p class="text-muted mb-0">Partagez vos connaissances avec la communauté</p>
							</div>
						</div>

						<!-- Formulaire -->
						{{ include('article/_form.html.twig') }}

						<!-- Bouton retour -->
						<div class="mt-3">
							<a href="{{ path('article_index') }}" class="btn btn-outline-secondary">
								<i class="fas fa-arrow-left"></i>
								Retour à la liste
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
